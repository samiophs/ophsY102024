names = []
names.append(input("Enter name1 >>>"))
names.append(input("Enter name2 >>>"))
names.append(input("Enter name3 >>>"))
x = input("invite more people? yes or no")
x.lower()
while x == "yes":
  names.append(input("Enter additional names >>>"))
  x = input("keep adding yes or no")
if x == "no":
   print("you have invited print",names," to the party.")
